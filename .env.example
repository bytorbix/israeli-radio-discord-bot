# Israeli Radio Discord Bot - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED: Discord Bot Configuration
# ===========================================

# Your Discord Bot Token (REQUIRED)
# Get this from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ===========================================
# OPTIONAL: Bot Configuration
# ===========================================

# Environment (development/production)
# Default: development
NODE_ENV=development

# Default volume level (0.1 to 1.0, where 1.0 = 100%)
# Default: 0.3 (30%)
DEFAULT_VOLUME=0.3

# Auto-reconnect when radio stream drops (true/false)
# Default: true
AUTO_RECONNECT=true

# ===========================================
# OPTIONAL: Logging & Debugging
# ===========================================

# Log level (error/warn/info/debug)
# Default: info
LOG_LEVEL=info

# Enable debug mode for additional logging (true/false)
# Default: false
DEBUG=false

# ===========================================
# OPTIONAL: Performance Tuning
# ===========================================

# Audio buffer size (in seconds)
# Default: 2
AUDIO_BUFFER_SIZE=2

# Connection timeout (in milliseconds)
# Default: 5000
CONNECTION_TIMEOUT=5000

# ===========================================
# OPTIONAL: Docker/Production Settings
# ===========================================

# Port for health checks (if using Docker)
# Default: 3000
PORT=3000

# Container restart policy
# Options: no, always, unless-stopped, on-failure
RESTART_POLICY=unless-stopped